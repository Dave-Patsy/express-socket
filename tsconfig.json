{
  "compilerOptions": {
    "sourceMap": true,
    "module": "nodenext",
    "target": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "nodenext",
    // "resolveJsonModule": true,
    "types": ["node"],
    "lib": ["ES2022", "DOM"]
  },
  "include": [    
    "./*.js",
    "src/**/*.ts",
    "test/**/*.ts", "src/index.ts",
  ],
  "exclude": ["node_modules"]
}
